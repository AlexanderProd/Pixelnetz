{
  "proxy": "http://localhost:3000",
  "name": "pixel_websockets",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build:frontend": "webpack --mode=production --config frontend.config.js",
    "build:master": "webpack --mode=production --config master.config.js",
    "start:frontend": "webpack-dev-server --config frontend.config.js --open --mode=development",
    "start:master": "webpack-dev-server --config master.config.js --open --mode=development",
    "start:server:prod": "PRODUCTION=true node server/src/index.js",
    "start:server:dev": "PRODUCTION=false nodemon server/src/index.js",
    "start:prod": "yarn build:frontend && yarn build:master && yarn start:server:prod",
    "start:dev": "yarn build:frontend && yarn build:master && yarn start:server:dev"
  },
  "dependencies": {
    "array-reverse-polyfill": "^1.0.9",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "dotenv": "^6.1.0",
    "es6-promise": "^4.2.5",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "my-local-ip": "^1.0.0",
    "whatwg-fetch": "^3.0.0",
    "ws": "^6.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "eslint": "^5.8.0",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.18.5",
    "style-loader": "^0.23.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  }
}
