{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["src/**/__testdata__/*"]
}
