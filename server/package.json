{
  "name": "pixelserver",
  "version": "1.0.0",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "cross-env NODE_ENV=production node dist/server/src/index.js",
    "serve:dev": "cross-env NODE_ENV=development node dist/server/src/index.js",
    "start:prod": "yarn build && cross-env NODE_ENV=production node dist/server/src/index.js",
    "start:dev": "nodemon",
    "start:dev:static": "yarn build && cross-env NODE_ENV=development node dist/server/src/index.js",
    "test": "mocha --reporter spec testSetup.js \"src/**/*.test.js\"",
    "test:watch": "mocha --reporter spec testSetup.js \"src/**/*.test.js\" --watch",
    "ava": "ava",
    "ava:watch": "ava --watch"
  },
  "dependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/node": "^11.13.4",
    "@types/sharp": "^0.22.1",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "chroma-js": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^6.1.0",
    "express": "^4.16.3",
    "express-fileupload": "^1.0.0",
    "get-pixels": "^3.3.2",
    "gif-frames": "^1.0.1",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.3.0",
    "my-local-ip": "^1.0.0",
    "sharp": "^0.21.0",
    "ws": "^6.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "@babel/register": "^7.0.0",
    "@types/sinon": "^7.0.11",
    "@types/sinon-express-mock": "^1.3.7",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "ava": "^1.4.1",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "chokidar": "^2.1.5",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.5",
    "prettier": "^1.16.4",
    "sinon": "^7.1.1",
    "sinon-chai": "^3.2.0",
    "sinon-express-mock": "^2.1.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.3.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "yarn start:dev:static",
    "ext": "[t|j]s"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "files": [
      "./src/**/*.test.ts"
    ],
    "sources": [
      "./src/**/*"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
