{
  "name": "pixelserver",
  "version": "1.0.0",
  "main": "src/index.js",
  "scripts": {
    "build": "babel src -d dist",
    "serve": "cross-env PRODUCTION=true node dist/index.js",
    "start:prod": "yarn build && cross-env PRODUCTION=true node dist/index.js",
    "start:dev": "yarn build && cross-env PRODUCTION=false nodemon dist/index.js",
    "test": "mocha --reporter spec testSetup.js \"src/**/*.test.js\"",
    "test:watch": "mocha --reporter spec testSetup.js \"src/**/*.test.js\" --watch"
  },
  "dependencies": {
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "dotenv": "^6.1.0",
    "express": "^4.16.3",
    "express-fileupload": "^1.0.0",
    "jsonwebtoken": "^8.3.0",
    "my-local-ip": "^1.0.0",
    "ws": "^6.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.8.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.5",
    "sinon": "^7.1.1",
    "sinon-chai": "^3.2.0",
    "sinon-express-mock": "^2.1.0"
  }
}
